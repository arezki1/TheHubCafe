@model IEnumerable<TheHubCafe.Models.Pizza>

@{
    ViewBag.Title = "Index";
}

<h2>Pizzas</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<iframe width="560" height="315" src="https://www.youtube.com/embed/7dQIi6d7TGc" frameborder="0" allowfullscreen></iframe>
<table class="table table-inverse">
    <thead id="pizzaForm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ingredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="success">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="danger">
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td class="info">
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td class="warning">
                    @Html.DisplayFor(modelItem => item.ingredients)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<img src="~/Content/images/pizza.jpg" height="200" width="420">